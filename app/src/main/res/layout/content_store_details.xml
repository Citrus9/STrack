<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_store_details"
    tools:context="pl.pwr.citrus.strack.StoreDetailsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nazwa sklepu"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="8dp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_toLeftOf="@+id/space"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginRight="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/storeName"
        android:layout_below="@+id/divider"
        android:layout_alignLeft="@+id/divider"
        android:layout_alignStart="@+id/divider"
        android:layout_marginTop="5dp"
        android:textColor="#2d2d2d"
        android:layout_alignRight="@+id/divider"
        android:layout_alignEnd="@+id/divider"
        android:hint="Nazwa sklepu"
        android:maxLines="1"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Spozywcze"
        android:id="@+id/textView1"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="8dp"

        android:layout_below="@+id/storeName"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_toLeftOf="@+id/space"
        android:layout_below="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginRight="8dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/seekBar"
        android:layout_below="@+id/divider2"
        android:layout_alignLeft="@+id/divider2"
        android:layout_alignStart="@+id/divider2"
        android:layout_alignRight="@+id/divider2"
        android:layout_alignEnd="@+id/divider2"
        android:max="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/groceryText"
        android:layout_above="@+id/seekBar"
        android:layout_alignRight="@+id/divider2"
        android:layout_alignEnd="@+id/divider2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Domowe"
        android:id="@+id/textView2"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="8dp"

        android:layout_below="@+id/seekBar"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_toLeftOf="@+id/space"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginRight="8dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/seekBar2"
        android:layout_below="@+id/divider3"
        android:layout_alignLeft="@+id/divider3"
        android:layout_alignStart="@+id/divider3"
        android:layout_alignRight="@+id/divider3"
        android:layout_alignEnd="@+id/divider3"
        android:max="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/houseText"
        android:layout_above="@+id/seekBar2"
        android:layout_alignRight="@+id/divider3"
        android:layout_alignEnd="@+id/divider3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Kosmetyki"
        android:id="@+id/textView3"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="8dp"

        android:layout_below="@+id/seekBar2"/>

    <View
        android:id="@+id/divider4"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_toLeftOf="@+id/space"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginRight="8dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/seekBar3"
        android:layout_below="@+id/divider4"
        android:layout_alignLeft="@+id/divider4"
        android:layout_alignStart="@+id/divider4"
        android:layout_alignRight="@+id/divider4"
        android:layout_alignEnd="@+id/divider4"
        android:max="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/cosmText"
        android:layout_above="@+id/seekBar3"
        android:layout_alignRight="@+id/divider4"
        android:layout_alignEnd="@+id/divider4" />


</RelativeLayout>
